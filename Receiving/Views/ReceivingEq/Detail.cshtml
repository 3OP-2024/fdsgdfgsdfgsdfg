        $('#tblDetail tbody').on('click', '.copy-row', function () {
            // Find the closest row and clone it
            var $originalRow = $(this).closest('tr');
            var $clonedRow = $originalRow.clone(true); // `true` copies data and events
            // อ่านค่าจำนวนที่สั่ง และจำนวนที่รับ
            var ordered = parseFloat($originalRow.find('td:eq(3)').text().trim()) || 0;
            var received = parseFloat($originalRow.find("input[name='qtyReceived']").val()) || 0;

            // คำนวณจำนวนที่เหลือ
            var remain = Math.max(ordered - received, 0);

            // ✅ ถ้าไม่มีเหลือ ไม่ต้อง clone
            if (remain <= 0) {
                showWarning("ไม่มีจำนวนคงเหลือให้คัดลอกแล้ว");
                return;
            }
            // เซ็ตค่าให้ row ที่ clone
            $clonedRow.find('td:eq(3)').text(remain); // จำนวนที่สั่ง = เหลือ
            $clonedRow.find("input[name='qtyReceived']").val(remain); // รับ ต้องไม่เกินที่เหลือ

            // Clear the input values in the cloned row to start fresh
            $clonedRow.find('input, textarea').val('');

            // Append the cloned row right after the original row
            $originalRow.after($clonedRow);
        });

