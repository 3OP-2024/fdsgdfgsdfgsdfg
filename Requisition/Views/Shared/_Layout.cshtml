    <script>
        function parseDate(d) {
            if (!d) return null;
            let parts = d.split("/");
            if (parts.length !== 3) return null;
            let day = parts[0].padStart(2, '0');
            let month = parts[1].padStart(2, '0');
            let year = parts[2];
            return `${year}-${month}-${day}`; // YYYY-MM-DD
        }

        document.addEventListener("DOMContentLoaded", function () {
