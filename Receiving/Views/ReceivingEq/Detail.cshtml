        function Save(s) {
            var send = false;
            if (s == "Y") { send = true; }

            var hasError = false;
            var details = [];
            $("#tblDetail tbody tr").each(function () {
                var row = $(this);

                // Helper function to get the value, handling both text and input
                function getCellValue(selector) {
                    var cell = row.find(selector);

                    debugger; 
                    // Check if the cell contains an input
                    var input = cell.find('input, textarea, select');
                    if (input.length > 0) {
                        return input.val();
                    }
                    // Otherwise, get the text from the cell
                    return cell.text().trim();
                }

                var detailItem = {
                    ItemOrder: parseFloat(getCellValue("td:eq(0)")) || 0, 
                    CodeID: getCellValue("td:eq(1)"), 

                    CodeName: row.find("td:eq(2)").text().trim(),

                    Quantity: parseFloat(getCellValue("td:eq(3)")) || 0,
                    QtyReceived: parseFloat($(this).find("input[name='qtyReceived']").val()) || 0,
                   
                    Unit: getCellValue("td:eq(5)"), 

